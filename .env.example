# Environment Configuration Template
# Copy this file to .env.development, .env.staging, .env.production

# ===================================
# APPLICATION CONFIGURATION
# ===================================

# Environment name (development, staging, production)
EXPO_PUBLIC_ENV=development

# Application version and build info
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_BUILD_NUMBER=1

# ===================================
# API CONFIGURATION
# ===================================

# API base URLs for different environments
EXPO_PUBLIC_API_URL=https://api-dev.nightlife-navigator.com
EXPO_PUBLIC_API_TIMEOUT=30000

# API versioning
EXPO_PUBLIC_API_VERSION=v1

# ===================================
# AUTHENTICATION
# ===================================

# JWT configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# OAuth providers
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

APPLE_CLIENT_ID=your-apple-client-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id

LINE_CLIENT_ID=your-line-client-id
LINE_CLIENT_SECRET=your-line-client-secret

# ===================================
# DATABASE CONFIGURATION
# ===================================

# Database connection
DATABASE_URL=postgresql://username:password@localhost:5432/nightlife_navigator_dev
DATABASE_SSL=false
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# ===================================
# EXTERNAL SERVICES
# ===================================

# Push notifications
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY_ID=your-firebase-private-key-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email
FIREBASE_CLIENT_ID=your-firebase-client-id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token

# Maps and location services
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
MAPBOX_ACCESS_TOKEN=your-mapbox-access-token

# Analytics
GOOGLE_ANALYTICS_ID=your-google-analytics-id
MIXPANEL_TOKEN=your-mixpanel-token

# Error tracking
SENTRY_DSN=your-sentry-dsn
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# ===================================
# STORAGE CONFIGURATION
# ===================================

# AWS S3 configuration
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=nightlife-navigator-assets-dev

# CDN configuration
CDN_URL=https://cdn-dev.nightlife-navigator.com

# ===================================
# SECURITY CONFIGURATION
# ===================================

# Encryption keys
ENCRYPTION_KEY=your-32-character-encryption-key-here
ENCRYPTION_IV=your-16-character-iv-here

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS settings
CORS_ORIGIN=http://localhost:3000,http://localhost:19006

# ===================================
# FEATURE FLAGS
# ===================================

# Feature toggles
EXPO_PUBLIC_FEATURE_BIOMETRIC_AUTH=true
EXPO_PUBLIC_FEATURE_SOCIAL_LOGIN=true
EXPO_PUBLIC_FEATURE_PUSH_NOTIFICATIONS=true
EXPO_PUBLIC_FEATURE_ANALYTICS=true
EXPO_PUBLIC_FEATURE_CRASH_REPORTING=true
EXPO_PUBLIC_FEATURE_PERFORMANCE_MONITORING=true

# Experimental features
EXPO_PUBLIC_EXPERIMENTAL_VENUE_RECOMMENDATIONS=false
EXPO_PUBLIC_EXPERIMENTAL_AR_FEATURES=false
EXPO_PUBLIC_EXPERIMENTAL_VOICE_SEARCH=false

# ===================================
# LOGGING AND MONITORING
# ===================================

# Log levels (error, warn, info, debug, trace)
LOG_LEVEL=debug

# Monitoring
EXPO_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
EXPO_PUBLIC_ENABLE_ERROR_BOUNDARY=true

# ===================================
# DEVELOPMENT CONFIGURATION
# ===================================

# Development tools
EXPO_PUBLIC_ENABLE_FLIPPER=true
EXPO_PUBLIC_ENABLE_REACTOTRON=true
EXPO_PUBLIC_ENABLE_DEV_MENU=true

# Mock data
EXPO_PUBLIC_USE_MOCK_DATA=true
EXPO_PUBLIC_MOCK_DELAY_MS=1000

# ===================================
# NOTIFICATION CONFIGURATION
# ===================================

# Notification settings
SLACK_WEBHOOK_URL=your-slack-webhook-url
EMAIL_NOTIFICATION=admin@nightlife-navigator.com

# ===================================
# PERFORMANCE CONFIGURATION
# ===================================

# Bundle and performance settings
EXPO_PUBLIC_BUNDLE_ANALYZER=false
EXPO_PUBLIC_SOURCE_MAPS=true

# Cache settings
EXPO_PUBLIC_CACHE_DURATION=3600000
EXPO_PUBLIC_OFFLINE_CACHE_SIZE=50

# ===================================
# LEGAL AND COMPLIANCE
# ===================================

# Legal URLs
EXPO_PUBLIC_PRIVACY_POLICY_URL=https://nightlife-navigator.com/privacy
EXPO_PUBLIC_TERMS_OF_SERVICE_URL=https://nightlife-navigator.com/terms
EXPO_PUBLIC_SUPPORT_URL=https://support.nightlife-navigator.com

# ===================================
# INSTRUCTIONS
# ===================================

# 1. Copy this file to create environment-specific configurations:
#    - .env.development (for development)
#    - .env.staging (for staging)
#    - .env.production (for production)
#
# 2. Update the values according to your environment
#
# 3. NEVER commit actual .env files to version control
#
# 4. Use strong, unique values for all secrets in production
#
# 5. Ensure all team members have access to the correct values